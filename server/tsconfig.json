{
	"compilerOptions": {
		"target": "es2020",
		"lib": ["ES2020"],
		"module": "commonjs",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"sourceMap": true,
		"strict": true,
		"outDir": "out",
		"rootDir": "src",
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"strictNullChecks": true
	},
	"include": ["src"],
	"exclude": ["node_modules", ".vscode-test"]
}
